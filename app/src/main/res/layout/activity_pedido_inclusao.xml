<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="Pedido"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:text="Para quem?" />

        <EditText
            android:id="@+id/txtQuem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:layout_marginRight="6pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:text="Quando?" />

        <EditText
            android:id="@+id/txtQuando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6pt"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:text="Contato: " />

        <EditText
            android:id="@+id/txtContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6pt"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6pt"
        android:layout_marginTop="6pt"
        android:text="O que?" />

    <EditText
        android:id="@+id/txtOq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6pt"
        android:layout_marginRight="6pt"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:selectAllOnFocus="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:text="Quanto?" />

        <EditText
            android:id="@+id/txtQuanto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6pt"
            android:layout_marginRight="6pt"
            android:layout_weight="1"
            android:inputType="numberDecimal" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/chkEntregue"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6pt"
        android:layout_marginTop="6pt"
        android:text="Entregue" />

    <CheckBox
        android:id="@+id/chkPago"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6pt"
        android:text="Pagamento OK" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:onClick="salvarPedido"
            android:text="Salvar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:onClick="cancelar"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>